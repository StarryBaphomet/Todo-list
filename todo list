import java.util.ArrayList;
import java.util.Scanner;

    public class TodoList {
        private static ArrayList<String> items = new ArrayList<String>();
        private static Scanner scanner = new Scanner(System.in);
    
    public static void main(String[] args){
        System.out.println("Welcome to your To Do List!");

        while (true){
            System.out.println("\nWhat would you like to do?");
            System.out.println("1. Add item");
            System.out.println("2. Remove item");
            System.out.println("3. Display items");
            System.out.println("4. Exit");

            int choice = scanner.nextInt();

            switch (choice) {
                case 1:
                addItem();
                break;

                case 2:
                removeItem();
                break;

                case 3:
                displayItems();
                break;

                case 4: 
               System.out.println("Goodbye, see you next time!");
               System.exit(0);

               default:
               System.out.println("Invalid Choice.");
            }
        }
    }
    private static void displayItems() {
        if (items.isEmpty()) {
            System.out.println("Your to-do list is empty.");
        } else {
            System.out.println("Your to-do list:");
            for (int i = 0; i < items.size(); i++) {
                System.out.println((i + 1) + ". " + items.get(i)); } }
 }
    private static void removeItem() {
        System.out.println("Enter the index of the item you want to remove:");
        int index = scanner.nextInt();
        if (index >= 0 && index < items.size()) {
            String removedItem = items.remove(index);
            System.out.println("Item '" + removedItem + "' removed successfully.");
        } else {
            System.out.println("Invalid index.");
        }
    }
    private static void addItem() {
        System.out.println("Enter the item you want to add:");
        scanner.nextLine();
        String item = scanner.nextLine();
        items.add(item);
        System.out.println("Item added successfully.");
    } 
}